<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MinSizedListView" x:Name="MinSizedListView" TargetType="ListView" BasedOn="{StaticResource ResourceKey=MaterialDesignListView}">
        <Setter Property="MinHeight" Value="50" />
    </Style>
    
    <Style x:Key="MaxSizedListView" x:Name="MaxSizedListView" TargetType="ListView" BasedOn="{StaticResource ResourceKey=MinSizedListView}">
        <Setter Property="MaxHeight" Value="100" />
    </Style>
</ResourceDictionary>